{
    "require": {
        "mongodb/mongodb": "^1.7",
        "php-di/php-di": "^6.2",
        "selective/basepath": "^1.0",
        "slim/psr7": "^1.2",
        "slim/slim": "4.*",
        "zircote/swagger-php": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
